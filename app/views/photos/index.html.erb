<nav class="nav sticky-top justify-content-center pt-2 pb-2 bg-light">
  <%= link_to 'New Photo', new_photo_path, class: 'btn btn-primary' %>
</nav>

<p id="notice"><%= notice %></p>

<section>
  <% @photos.each do |photo| %>
    <article class="container">
      <div class="col">
        <%= link_to photo do %>
          <figure>
            <%= image_tag photo.image.url, class: 'img-fluid', alt: photo.description %>
          </figure>
        <% end %>
        <p>
          <strong><%= photo.user.email %></strong>
          <%= photo.description %>
          <%= photo.location %>
        </p>
      </div>
      <div class="col">
        <iframe
        width="600"
        height="450"
        frameborder="0" style="border:0"
        src="https://www.google.com/maps/embed/v1/view?key=AIzaSyAxejXjoQDHG_HnPMWg6Uwbqmwcigd-JRI &center=<%= photo.latitude %>, <%= photo.longitude %> &zoom=13 &maptype=satellite" allowfullscreen>
        </iframe>
      </div>
    </article>
  <% end %>
</section>
